include "log.fbs";
include "notification.fbs";
include "request.fbs";
include "response.fbs";

namespace FBS.Message;

enum Type: uint8 {
    REQUEST = 0,
    RESPONSE,
    NOTIFICATION,
    LOG,
}

union Body {
    Request: FBS.Request.Request,
    Response: FBS.Response.Response,
    Notification: FBS.Notification.Notification,
    Log: FBS.Log.Log,
}

table Message {
    type: Type;
    data: Body (required);
}

root_type Message;

